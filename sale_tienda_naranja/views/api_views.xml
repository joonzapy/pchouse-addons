<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="api_form" model="ir.ui.view">
        <field name="name">api.form</field>
        <field name="model">tienda.naranja.api</field>
        <field name="arch" type="xml">
            <form string="API">
                <header>
                    <button name="get_access_token" string="Obtener Token" class="oe_highlight" type="object"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nombre de la API"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="token_key"/>
                        </group>
                        <group>
                            <field name="base_url"/>
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="api_tree" model="ir.ui.view">
        <field name="name">api.tree</field>
        <field name="model">tienda.naranja.api</field>
        <field name="arch" type="xml">
            <tree string="API">
                <field name="name"/>
                <field name="consumer_key"/>
                <field name="consumer_secret"/>
                <field name="token_key"/>
                <field name="token_secret"/>
            </tree>
        </field>
    </record>

    <record id="api_action" model="ir.actions.act_window">
        <field name="name">Configuracion Tienda Naranja</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tienda.naranja.api</field>
        <field name="view_mode">form,tree</field>
    </record>

    <menuitem id="menu_tienda_naranja_config"
              parent="sale.sale_menu_root"
              name="Tienda Naranja"
              action="api_action"
              sequence="7"
              groups="sales_team.group_sale_manager"/>


</odoo>
